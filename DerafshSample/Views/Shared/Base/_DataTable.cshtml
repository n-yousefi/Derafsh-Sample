@model DerafshSample.ModelsLibrary.ViewModels.General.DataTableComponentModel
<div class="table-responsive">
    <div id="users-table_wrapper" class="form-inline">

        <div class="row">
            <div class="col-sm-6">
                <div id="users-table_filter" >
                    <label>
                        Search:<input type="search" class="form-control input-sm" placeholder="" aria-controls="users-table">
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            @foreach (System.Data.DataColumn col in Model.DataTable.Columns)
                            {
                                if (string.Equals(col.Caption, "id", StringComparison.CurrentCultureIgnoreCase))
                                {
                                    <th>Id</th>
                                }
                                else
                                {
                                    <th>@col.Caption</th>
                                }
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow row in Model.DataTable.Rows)
                        {
                            <tr>
                                @foreach (var cell in row.ItemArray)
                                {
                                    <td>@cell.ToString()</td>
                                }
                                @foreach (var cell in Model.LinkRows)
                                {
                                    <td>
                                        <a href="@cell.Url.Replace("{id}",((int)row["id"]).ToString()).Replace("{entityId}",Model.EntityId.ToString()).Replace("{entity}",Model.Entity)">@cell.UrlTitle</a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>     
    </div>
</div>
